<script type="text/javascript" src="~/H-ui.admin/lib/jquery.validation/1.14.0/jquery.validate.js"></script>
<script type="text/javascript" src="~/H-ui.admin/lib/jquery.validation/1.14.0/validate-methods.js"></script>
<script type="text/javascript" src="~/H-ui.admin/lib/jquery.validation/1.14.0/messages_zh.js"></script>
<script type="text/javascript">
    var id = location.search.split("=")[1]
    $(function () {
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });

        $("#form-admin-user-edit").validate({
            rules: {

            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                var str = "";
                $("[name='user-Character-0']:checked").each(function () {
                    str += $(this).val() + ',';
                })

                str = str.substring(0, str.length - 1);
                $(form).ajaxSubmit({
                    type: 'post',
                    url: "/Administrator/UserUpt",
                    data: {
                        ID: id,
                        AccountName: $("#accountName").val(),
                        Pwd: $("#pwd").val(),
                        Sex: $("[name='Sex']:checked").val(),
                        Phone: $("#phone").val(),
                        CreTime: $("#cre").val(),
                        OwnRole:str
                    },
                    success: function (data) {
                        layer.msg('修改成功!', { icon: 1, time: 2000 })
                    },
                    error: function (XmlHttpRequest, textStatus, errorThrown) {
                        layer.msg('error!', { icon: 1, time: 1000 });
                    }

                });
                window.parent.location.reload();
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            }
        });

    });

    $(function () {
        $.ajax({
            url: '/Administrator/GetPermissionByID?id=' + id,
            type: 'get',
            dataType: 'json',
            success: function (data) {
                if (data != null) {
                    $("#adminName").val(data.Name)
                    $("#url").val(data.Url)
                    if (data.State == 1) {
                        $("#sex-1").prop("checked", true)
                    }
                    if (data.State == 0) {
                        $("#sex-2").prop("checked", true)
                    }

                    $("#pid").val(data.PID)
                }
            }
        })
    })
</script>