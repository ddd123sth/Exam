                area: ["400px", "400px"],
                content: str
            })
            $("input[name='tp'][value=" + types + "]").attr("checked", true);
            if (types == 3) {
                judge = choice == "对" ? 1 : 0;
                $("input[name='pd'][value='" + judge + "']").attr("checked", true);
            }
            $("input[name='tp']").attr("disabled", true);
            $("input[name='pd']").attr("disabled", true);
        }
        //修改弹窗
        function Upt(id, type, obj) {
