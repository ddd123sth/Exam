    <script type="text/javascript">
        var UnitId;//定义外键Id
        //文本就绪函数,当页面加载完毕,树即绑定完毕
        $(function () {
            var setting = {
                data: {
                    simpleData:
                    {
                        enable: true,
                        idKey: "id",
                        pIdKey: "pid",
                        rootPId: null
                    },
                    key: {
